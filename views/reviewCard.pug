mixin reviewCard(review)
  - console.log(review)
  .reviews__card
    .reviews__avatar
      img.reviews__avatar-img(src=`Images/users/${review.user.image}`)
      h6.reviews__user= review.user.firstName
    p.reviews__text= review.comment
    .reviews__rating
        each star in [1,2,3,4,5]
          if apartment.ratingsAverage >= star
              span.fa.fa-star.checked
          else 
              span.fa.fa-star.unchecked
